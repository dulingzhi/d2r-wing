{
    "basedOn": "BankOriginalLayoutHD.json",
    "type": "BankPanel", "name": "BankExpansionLayout",
    "fields": {
        "backgroundFile": [
            "PANEL\\Stash\\StashPanel_BG_Personal",
            "PANEL\\Stash\\StashPanel_BG_Shared",
        ]
    },
    "children": [
        {
            "type": "ClickCatcherWidget", "name": "click_catcher",
        },
        {
            "type": "ImageWidget", "name": "background",
            "fields": {
                "filename": "PANEL\\Stash\\StashPanel_BG_New",
            },
        },
        {
            "type": "ImageWidget", "name": "LeftHinge",
        },
        {
            "type": "TextBoxWidget", "name": "title",
        },
        {
            "type": "TextBoxWidget", "name": "gold_amount",
            "fields": {
                "rect": { "x": 474, "y": 1356 }
            }
        },
        {
            "type": "ButtonWidget", "name": "gold_withdraw",
            "fields": {
                "rect": { "x": 424, "y": 1356 }
            }
        },
        {
            "type": "ButtonWidget", "name": "close",
        },
        {
            "type": "InventoryGridWidget", "name": "grid",
            "fields": {
                "rect": { "x": 89, "y": 219 },
                "cellCount": { "x": 10, "y": 10 }
            },
        },
        {
            "type": "TabBarWidget", "name": "BankTabs",
            "fields": {
                "rect": { "x": 82, "y": 146 },
                "tabCount": 2,
                "filename": "PANEL\\stash\\Stash_Tabs_New",
                "inactiveFrames": [ 0, 0 ],
                "activeFrames": [ 1, 1 ],
                "disabledFrames": [-1, 0 ],
                "textStrings": [ "@personal", "@shared" ],
                "textStyle": { "pointSize": "$SmallPanelFontSize" },
                "activeTextColor": "$TabsActiveTextColor",
                "inactiveTextColor": "$TabsInactiveTextColor",
                "tabSize": { "x": 166, "y": 72 },
                "tabPadding": { "x": 0, "y": 0 },
                "onSwitchTabMessage": "BankPanelMessage:SelectTab",
            }
        },
        {
            "type": "Widget", "name": "SharedStashTabContainer",
            "children": [
                {
                    "type": "Widget", "name": "PreviousSeasonToggleDisplay",
                    "fields": {
                        "rect": { "x": 950, "y": 65 }
                    },
                    "children": [
                        {
                            "type": "TextBoxWidget", "name": "ShowPreviousLadderText",
                            "fields": {
                                "text": "@oldStash",
                                "rect": { "x": 0, "y": 28 },
                                "style": {
                                    "fontColor": "$PanelTitleColor",
                                    "pointSize": "$MediumFontSize",
                                    "alignment": { "v": "center", "h": "right" },
                                    "spacing" : "$MinimumSpacing",
                                    "dropShadow": "$DefaultDropShadow"
                                }
                            }
                        },
                        {
                            "type": "ToggleButtonWidget", "name": "ShowPreviousLadderSeasonToggle",
                            "fields": {
                                "rect": { "x": 8, "y": 0 },
                                "filename": "Lobby\\CreateGame\\CreateGame_AdvancedCheckbox",
                                "untoggledFrame": 0,
                                "untoggledPressedFrame": 1,
                                "untoggledHoveredFrame": 3,
                                "untoggledDisabledFrame": 2,
                                "toggledFrame": 4,
                                "toggledPressedFrame": 5,
                                "toggledHoveredFrame": 6,
                                "onClickMessage": "BankPanelMessage:TogglePreviousSeasonTabs",
                                "tooltipString": "@SharedStashPreviousSeasonToggleTooltip",
                            }
                        }
                    ]
                },
                {
                    "type": "ImageWidget", "name": "StashNavigation",
                    "fields": {
                        "rect": { "x": 369, "y": 1211, "width": 420, "height": 93 },
                        "filename": "PANEL\\Stash\\Stash_PageNavigation"
                    },
                    "children": [
                        {
                            "type": "ButtonWidget", "name": "StashLeftArrow",
                            "fields": {
                                "rect": { "x": 29, "y": 13, "width": 64, "height": 64 },
                                "filename": "PANEL\\Stash\\Stash_LeftArrow",
                                "normalFrame": 0,
                                "pressedFrame": 2,
                                "hoveredFrame": 1,
                                "disabledFrame": 3,
                                "onClickMessage": "BankPanelMessage:SharedStashLeft"
                            }
                        },
                        {
                            "type": "TextBoxWidget", "name": "CurrentSharedStashText",
                            "fields": {
                                "text": "@SharedStashPage",
                                "rect": {  "x": 95, "y": 13, "width": 230, "height": 64 },
                                "style": {
                                    "fontColor": "$PanelTitleColor",
                                    "pointSize": "$MediumFontSize",
                                    "alignment": { "v": "center", "h": "center" },
                                    "spacing" : "$MinimumSpacing",
                                    "dropShadow": "$DefaultDropShadow"
                                }
                            }
                        },
                        {
                            "type": "ButtonWidget", "name": "StashRightArrow",
                            "fields": {
                                "rect": { "x": 327, "y": 13, "width": 64, "height": 64 },
                                "filename": "PANEL\\Stash\\Stash_RightArrow",
                                "normalFrame": 0,
                                "pressedFrame": 2,
                                "hoveredFrame": 1,
                                "disabledFrame": 3,
                                "onClickMessage": "BankPanelMessage:SharedStashRight"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
