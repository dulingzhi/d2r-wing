{
    "type": "TitleScreenHDPanel", "name": "TitleScreenPanel",
    "fields": {
        "fitToParent": true,
    },
    "children": [
        {
            "type": "RectangleWidget", "name": "Background",
            "fields": {
                "fitToScreen": true,
            }
        },
        {
            "type": "MoviePlayerWidget", "name": "MoviePlayer",
            "fields": {
                "jukeboxManaged": true,
                "showCursor": true,
            },
        },
        {
            "type": "TextBoxWidget", "name": "InputPrompt",
            "fields": {
                "anchor": { "x": 0.5, "y": 1 },
                "rect": { "x": 0, "y": -430 },
                "text": "@KeyboardTitleScreenPrompt",
                "style": {
                    "alignment": { "h": "center", "v": "center" },
                    "fontColor": "$FontColorDarkGrayBlue",
       	            "pointSize": "$XExtraLargeFontSize",
                }
            }
        },
        {
            "type": "ImageWidget", "name": "BlizzLogo",
            "fields": {
                "anchor": { "x": 0.5, "y": 0.5 },
                "rect": { "x": -100, "y": 763 },
                "filename": "SplashScreen//splash_BlizzLogo"
            },
        },
        {
            "type": "TextBoxWidget", "name": "ChinesePublisherLine1",
            "fields": {
                "anchor": { "x": 0.5, "y": 1 },
                "rect": { "x": 0, "y": -167 },
                "text": "@ChinesePublisherLine1",
                "style": {
                    "alignment": { "h": "center", "v": "center" },
                    "fontColor": "$FontColorDarkGrayBlue",
                    "pointSize": "$FixedMediumFontSize",
                    "fontFace": "BlizzardGlobal",
                }
            }
        },
        {
            "type": "TextBoxWidget", "name": "ChinesePublisherLine2",
            "fields": {
                "anchor": { "x": 0.5, "y": 1 },
                "rect": { "x": 0, "y": -111 },
                "text": "@ChinesePublisherLine2",
                "style": {
                    "alignment": { "h": "center", "v": "center" },
                    "fontColor": "$FontColorDarkGrayBlue",
                    "pointSize": "$FixedMediumFontSize",
                    "fontFace": "BlizzardGlobal",
                }
            }
        },
        {
            "type": "TextBoxWidget", "name": "Copyright",
            "fields": {
                "anchor": { "x": 0.5, "y": 1 },
                "rect": { "x": 0, "y": -55 },
                "text": "@CopyrightText",
                "style": {
                    "alignment": { "h": "center", "v": "center" },
                    "fontColor": "$FontColorDarkGrayBlue",
                    "pointSize": "$SmallFontSize",
                    "fontFace": "BlizzardGlobal",
                }
            }
        },
        {
            "type": "TextBoxWidget", "name": "LoadingPrompt",
            "fields": {
                "anchor": { "x": 0.5, "y": 1 },
                "rect": { "x": 0, "y": -430 },
                "text": "@strBNPleaseWait",
                "style": {
                    "alignment": { "h": "center", "v": "center" },
                    "pointSize": "$HugeFontSize",
                }
            }
        },
        {
            "type": "TextBoxWidget", "name": "BuildVersionTextBox",
            "fields": {
                "anchor": { "x": 0.95, "y": 0.95 },
                "rect": { "x": 0, "y": -80 },
                "style": {
                    "alignment": { "h": "right", "v": "center" },
                    "pointSize": "$MediumFontSize",
                    "fontColor": "$FontColorLightGray",
                }
            }
        },
        {
            "type": "TextBoxWidget", "name": "EnvironmentSettingsTextBox",
            "fields": {
                "anchor": { "x": 0.95, "y": 0.95 },
                "rect": { "x": 0, "y": -40 },
                "style": {
                    "alignment": { "h": "right", "v": "center" },
                    "pointSize": "$MediumFontSize",
                    "fontColor": "$FontColorLightGray",
                }
            }
        },
        {
            "type": "TextBoxWidget", "name": "BGSAddressTextBox",
            "fields": {
                "anchor": { "x": 0.95, "y": 0.95 },
                "rect": { "x": 0, "y": 0 },
                "style": {
                    "alignment": { "h": "right", "v": "center" },
                    "pointSize": "$MediumFontSize",
                    "fontColor": "$FontColorLightGray",
                }
            }
        },
        {
            "type": "ButtonWidget", "name": "ChineseAgeRestriction",
            "fields": {
                "rect": { "x": -150, "y": -400 },
                "anchor": { "x": 0.95, "y": 0.95 },
                "filename": "FrontEnd/ChineseAgeAlertIcon",
                "onClickMessage": "PanelManager:OpenPanel:ChineseAgeRestrictionInstructionsPanel",
                "hoveredFrame": 2,
            }
        },
        {
            "type": "TextBoxWidget", "name": "ChineseWarningsAndDisclaimers",
            "fields": {
                "anchor": { "x": 1.0 },
                "rect": { "x": -910, "y": 50, "width": 880, "height": 880 },
                "text": "@ChineseWarningsAndDisclaimers",
                "style": {
                    "alignment": { "h": "left", "v": "center" },
                    "fontColor": "$FontColorDarkGrayBlue",
                    "pointSize": "$FixedMediumFontSize",
                    "fontFace": "BlizzardGlobal",
                    "options": { "pipeCharacterBehavior" : "handle", "lineWrap": true, "newlineHandling": "standard" },
                }
            }
        },
        {
            "type": "RectangleWidget", "name": "LoadingScreen",
            "fields": {
                "fitToScreen": true,
            },
            "children": [
                {
                    "type": "AnimatedImageWidget", "name": "FullGlow",
                    "fields": {
                        "anchor": { "x": 1.0, "y": 1.0 },
                        "rect": { "x": -400, "y": -420, "scale": 0.5 },
                        "filename": "LogoAnimation/FullGlow_PC",
                        "fps": 20,
                    },
                },
                {
                    "type": "AnimatedImageWidget", "name": "Logo",
                    "fields": {
                        "anchor": { "x": 1.0, "y": 1.0 },
                        "rect": { "x": -399, "y": -395, "scale": 0.5 },
                        "filename": "LogoAnimation/LogoAnimation",
                        "fps": 20,
                    },
                },
                {
                    "type": "AnimatedImageWidget", "name": "BottomFlames",
                    "fields": {
                        "anchor": { "x": 1.0, "y": 1.0 },
                        "rect": { "x": -319, "y": -228, "scale": 0.5 },
                        "filename": "LogoAnimation/Logo_BottomFlame",
                        "fps": 20,
                    },
                },
            ]
        }
    ]
}
